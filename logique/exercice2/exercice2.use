model exercice2

class MyInteger
	attributes
		value: Integer

	operations
		diviserPar(diviseur: MyInteger): MyInteger
end

constraints

context MyInteger::diviserPar(diviseur: MyInteger): MyInteger
	-- Ã‰vite les divisions par 0
	pre: diviseur.value <> 0

	-- La division est correcte
	post: result.value = value / diviseur.value
